<h1>edit password</h1>

<% if flash[:notice] %>
  <div class="notice">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<%= form_with model: current_user, url: password_path do |form| %>
    <% if form.object.errors.any? %>
    <div>
      <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div>
        <%= form.label :password_chalenge, "enter perevious password" %>
        <%= form.password_field :password_chalenge %>
    </div>

    <div>
        <%= form.label :password, "new password" %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.label :password_confirmation, "password_confirmation" %>
        <%= form.password_field :password_confirmation %>
    </div>

    <div>
        <%= form.submit "updated password" %>
    </div>
<% end %>

